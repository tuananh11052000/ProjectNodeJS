<!DOCTYPE html>
<html lang="en">

<head>
   <meta charset="UTF-8">
   <meta http-equiv="X-UA-Compatible" content="IE=edge">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <title>Trang chủ</title>
   <!-- stylesheet -->
   <link rel="stylesheet" href="client/css/index.css">
   <link rel="stylesheet" href="client/css/style.css">
   <!-- fav icon -->
   <link rel="icon" href="client/images/icon.png">

   <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet">
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />

   <!-- slick slider-->
   <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css" />
</head>

<% include ./layout/menu.ejs %>
   <!-- end of header -->
   <!-- content ---------------------------------------->
   <div class="wrap-content">
      <div class="container-fluid p-1 wrap-slide">
         <div class="site-slider">
            <div class="slider-one">
               <div>
                  <!-- <div class=""> </div> -->
                  <img src="client/images/slider/slider_1.jpg" class="img-fluid" alt="banner 1">
               </div>
               <div>
                  <img src="client/images/slider/slider_2.jpg" class="img-fluid" alt="banner 2">
               </div>
               <div>
                  <img src="client/images/slider/slider_3.jpg" class="img-fluid" alt="banner 3">
               </div>
               <!-- <div>
                  <img src="client/images/slider/slider_4.jpg" class="img-fluid" alt="banner 3">
               </div> -->
            </div>
            <div class="slider-btn">
               <span class="prev position-top"><i class="fas fa-chevron-left"></i> </span>
               <span class="next position-top right-0"><i class="fas fa-chevron-right"></i> </span>
            </div>
         </div>
      </div>
      <!-- slide category -->
      <div class="container-fluid p-1 wrap-category">
         <div class="site-slider-two px-md-4">
            <h4>Khám phá danh mục</h4>
            <div class="row slider-two text-center">
               <div class="col-md-2 catagory pt-md-2">
                  <a href="http://localhost:3000/category?TypeAuthor=tangcongdong"><img src="client/images/category/community.jpg" class="img-fluid" alt="catagory 1"></a>
                  <span class="site-btn btn-span"><a class="category-title" href="http://localhost:3000/category?TypeAuthor=tangcongdong">Tặng cộng
                        đồng</a></span>
               </div>
               <div class="col-md-2 catagory pt-md-2">
                  <a href="http://localhost:3000/category?TypeAuthor=quy"><img src="https://png.pngtree.com/png-vector/20190217/ourlarge/pngtree-illustration-of-charity-logo-design-template-png-image_555252.jpg" class="img-fluid" alt="catagory 1"></a>
                  <span class="site-btn btn-span"><a class="category-title" href="http://localhost:3000/category?TypeAuthor=quy">Tặng quỹ từ thiện</a></span>
               </div>
               <div class="col-md-2 catagory pt-md-2">
                  <a href="http://localhost:3000/category?TypeAuthor=tochuc"><img src="https://nhipcaututhien.info/wp-content/uploads/2019/07/logo-new2.png" class="img-fluid" alt="catagory 1"></a>
                  <span class="site-btn btn-span"><a class="category-title" href="http://localhost:3000/category?TypeAuthor=tochuc">Quyên góp công ích</a></span>
               </div>
               <div class="col-md-2 catagory pt-md-2">
                  <a href="http://localhost:3000/category?TypeAuthor=canhan"><img src="https://i.pinimg.com/474x/dc/26/9d/dc269d1af23055284244bbbeec951ddb.jpg" class="img-fluid" alt="catagory 1"></a>
                  <span class="site-btn btn-span"><a class="category-title" href="http://localhost:3000/category?TypeAuthor=canhan">Tặng người nghèo</a></span>
               </div>
               <div class="col-md-2 catagory pt-md-2">
               <a class="category-title" href="http://localhost:3000/filter?category=Đồ may mặc">
                  <img src="client/images/category/clothes.jpg" class="img-fluid" alt="catagory 1"></a>
                  <span class="site-btn btn-span"><a class="category-title" href="http://localhost:3000/filter?category=Đồ may mặc">Đồ may mặc</a></span>
               </div>
               <div class="col-md-2 catagory pt-md-2">
                  <a class="category-title" href="http://localhost:3000/filter?category=Đồ học tập">
                  <img src="client/images/books/book-1.jpg" class="img-fluid" alt="catagory 1"></a>
                  <span class="site-btn btn-span"><a class="category-title" href="http://localhost:3000/filter?category=Đồ học tập">Đồ học tập</a></span>
               </div>
            </div>

            <div class="slider-btn">
               <span class="prev position-top"><i class="fas fa-chevron-left fa-2x text-secondary"></i></span>
               <span class="next position-top right-0"><i class="fas fa-chevron-right fa-2x text-secondary"></i></span>
            </div>
         </div>
      </div>
      <!-- product -->
      <div class="container-fluid p-1 wrap-post">
         <div class="row title-post">
            <div class="col-lg-6">
               <h4>Tin đăng mới</h4>
            </div>
         </div>
         <div class="row card-deck">
            <% data.map(function(product) { %>
               <div class="wrap-card col-lg-3 col-md-4 col-sm-6 col-6 product-center pl-0">
                  <div class="card border-light mb-3 ml-0 pl-0" style="border: none;">
                     <!-- add -->
                     <a onclick="viewPost('<%= product._id%>')">
                        <img class="card-img-top card-header p-0" src="<%= product.urlImage[0] %>" alt="items">
                     </a>
                     <!-- add -->
                     
                     <div class="card-body">
                        <a href="#" onclick="viewPost('<%= product._id%>')" class="text-decoration-none card-title">
                           <h5>
                              <%= product.title %>
                           </h5>
                        </a>
                        <p class="card-text">
                           <%let address=product.address.split(",");%>
                              <% element=address.slice(2); %>
                                 <%= element %>
                        </p>
                     </div>
                  </div>
               </div>
               <% }) %>
         </div>


      </div>
   </div>


   <!-- end of content --------------------------------->

   <!-- Create post -->
   <% include ./create_post.ejs %>
   <!-- End of Create post -->
   <!-- footer -->
   <% include ./layout/footer.ejs %>
   <!-- end of footer -->

   


         <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"></script>
         <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
         <script type="text/javascript" src="//code.jquery.com/jquery-migrate-1.2.1.min.js"></script>
         <script type="text/javascript" src="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>
         <script src="client/js/script.js"></script>
         <script type="text/javascript" src="client/js/main.js"></script>


   </body>

</html>
<script>

   function viewPost(id) {
      let url = `view-post?_id=${id}`
      location.href = url
   }

</script>