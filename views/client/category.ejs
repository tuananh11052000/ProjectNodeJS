<!DOCTYPE html>
<html lang="en">

<head>
   <meta charset="UTF-8">
   <meta http-equiv="X-UA-Compatible" content="IE=edge">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <title>Danh mục</title>
   <!-- stylesheet -->
   <link rel="stylesheet" href="client/css/category.css">
   <link rel="stylesheet" href="client/css/style.css">
   <!-- fav icon -->
   <link rel="icon" href="client/images/icon.png">

   <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet">
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />

</head>

<% include ./layout/menu.ejs %>

   <!-- content --------------------------------->

   <div class="wrap-content">
      <div class="row title-post">
         <div class="col-lg-6">
            <h4>Kết quả tìm kiếm:</h4>
         </div>
      </div>

<% include ./layout/filter.ejs %>

      <!-- product -->
      <div class="container-fluid p-1 wrap-post">
         <div class="row">
            <% data.map(function(product) { %>
               <div class="col-lg-3 col-md-4 col-sm-6 col-6 product-center">
                  <div class="wrap-card card border-light mb-3 p-0" style="border: none;">
                     <!-- add -->
                     <a onclick="viewPost('<%= product._id%>')"></a>
                     <!-- add -->
                     <img class="card-img-top card-header p-0" src="<%= product.urlImage[0] %>" alt="items">
                     <div class="card-body">
                        <a href="#" onclick="viewPost('<%= product._id%>')" class="text-decoration-none card-title">
                           <h5>
                              <%= product.title %>
                           </h5>
                        </a>
                        <p class="card-text">
                           <%let address=product.address.split(",");%>
                              <% element=address.slice(2); %>
                                 <%= element %>
                        </p>
                     </div>
                  </div>
               </div>
               <% }) %>
         </div>
      </div>
   </div>


   <!-- end of content --------------------------------->

   <!-- Create post -->
   <% include ./create_post.ejs %>
      <!-- End of Create post -->
      <!-- footer -->
      <% include ./layout/footer.ejs %>
         <!-- end of footer -->

         <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"></script>
         <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
         <script type="text/javascript" src="//code.jquery.com/jquery-migrate-1.2.1.min.js"></script>
         <script type="text/javascript" src="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>

         <script src="client/js/script.js"></script>
         <script type="text/javascript" src="client/js/search.js"></script>
         </body>

</html>
<script>
   function viewPost(id) {
      let url = `view-post?_id=${id}`
      location.href = url
   }

</script>

<script>
   $("select").click(function () {
      var open = $(this).data("isopen");
      if (open) {
         window.location.href = $(this).val()
      }
      //set isopen to opposite so next time when use clicked select box
      //it wont trigger this event
      $(this).data("isopen", !open);
   });
</script>